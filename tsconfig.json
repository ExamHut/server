{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "allowJs": false,
        "alwaysStrict": true,
        "declaration": false,
        "listEmittedFiles": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": false,
        "types": ["node"],
        "downlevelIteration": true,
        "incremental": false,
        "baseUrl": ".",
        "paths": {
            "@vulcan/configs/*": ["src/configs/*"],
            "@vulcan/utils/*": ["src/utils/*"],
            "@vulcan/middlewares": ["src/middlewares/index"],
            "@vulcan/controllers": ["src/controllers/index"],
            "@vulcan/models": ["src/models/index"],
            "@vulcan/services/*": ["src/services/*"],
            "@vulcan/routes": ["src/routes/index"],
        },
        "outDir": "dist",
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "src/**/*"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}
