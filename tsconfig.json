{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": false,
        "alwaysStrict": true,
        "declaration": false,
        "listEmittedFiles": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "types": ["node"],
        "downlevelIteration": true,
        "incremental": false,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "plugins": [],
        "paths": {
            "@vulcan/configs/*": ["src/configs/*"],
            "@vulcan/utils": ["src/utils.ts"],
            "@vulcan/middlewares": ["src/middlewares/index"],
            "@vulcan/controllers/*": ["src/controllers/*"],
            "@vulcan/models": ["src/models/index"],
            "@vulcan/services/*": ["src/services/*"],
            "@vulcan/routes": ["src/routes.ts"],
        },
        "outDir": "dist",
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["node_modules/@types/", "src/typings/"],
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/global.d.ts",
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register",
            "dotenv/config",
        ]
    }
}
