{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./",
        "moduleResolution": "node",
        "baseUrl": "src",
        "paths": {
            "@/*": ["src/*"]
        },
        "sourceMap": false,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
    },
    "include": [
        "src/**/*"
    ]
}
